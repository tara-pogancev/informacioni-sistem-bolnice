<UserControl x:Class="SIMS.PacijentGUI.PreporukaTermina"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIMS.PacijentGUI" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"  
             d:DesignHeight="550" d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Lime.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="#FF323D52">
        <materialDesign:TransitioningContent x:Name="TrainsitionigContentSlide" OpeningEffect="{materialDesign:TransitionEffect Kind=ExpandIn, Duration=0:0:0.8}">
            <StackPanel Margin="30">
                <Label HorizontalAlignment="Center" FontSize="18" Foreground="White">Izaberite datum</Label>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                    <DatePicker Width="150" Margin="70,0,80,0" materialDesign:HintAssist.Hint="Pocetni datum" Foreground="White" FontSize="16" Name="PocetniDatum" SelectedDateChanged="PocetniDatum_SelectedDateChanged"></DatePicker>
                    <DatePicker Width="150" materialDesign:HintAssist.Hint="Krajnji datum" Foreground="White"  FontSize="16" Name="KrajnjiDatum"></DatePicker>
                </StackPanel>

                <Label HorizontalAlignment="Center" Margin="0,30,0,0" FontSize="18" Foreground="White">Prioritet</Label>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" >
                    <RadioButton Name="lekarChecked" FontSize="15" Checked="lekarChecked_Checked"
                  Style="{StaticResource MaterialDesignDarkRadioButton }"  Background="Aqua" Width="80"  Margin="10,0,10,20" Foreground="White">
                        Lekar
                    </RadioButton>
                    <RadioButton Name="datumChecked" FontSize="15" Checked="datumChecked_Checked"
                     Style="{StaticResource MaterialDesignDarkRadioButton}" Background="Aqua" Width="80" Margin="20,0,0,20" Foreground="White" >
                        Datum

                    </RadioButton>
                </StackPanel>

                <Label FontSize="18" Content="Izaberite doktora" Margin="208,10,0,0" Foreground="White"/>
                <Border BorderThickness="1" BorderBrush="Black"  Width="350" Height="100" CornerRadius="15" >
                    <ListView Width="350"  Height="100" Foreground="White" ScrollViewer.VerticalScrollBarVisibility="Hidden" Margin="0" Name="ListaDoktora" ItemsSource="{Binding Lekari}"  DisplayMemberPath="ImePrezime">
                        
                    </ListView>
                </Border>
                

                <Button Width="150" x:Name="Trazi" Click="Trazi_Click" >Traži</Button>




            </StackPanel>
        </materialDesign:TransitioningContent>

    </Grid>
</UserControl>
