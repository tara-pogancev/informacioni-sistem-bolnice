<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>logo.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="LekarGUI\logo_h_small.png" />
    <None Remove="LekarGUI\notification.png" />
    <None Remove="LekarGUI\profile.png" />
    <None Remove="LekarGUI\search.png" />
    <None Remove="logo.ico" />
    <None Remove="src\close.png" />
    <None Remove="src\exit.png" />
    <None Remove="src\Illustrations\Lunch_break.png" />
    <None Remove="src\Illustrations\Winners_Monochromatic.png" />
    <None Remove="src\logo.ico" />
    <None Remove="src\logo.png" />
    <None Remove="src\logo_glow.jpg" />
    <None Remove="src\logo_glow_tr.png" />
    <None Remove="src\logo_h.png" />
    <None Remove="src\logo_h_small.png" />
    <None Remove="src\logo_title.png" />
    <None Remove="src\max_window.png" />
    <None Remove="src\minimize.png" />
    <None Remove="src\notification.png" />
    <None Remove="src\profile.png" />
    <None Remove="src\search.png" />
    <None Remove="src\small_window.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="src\close.png" />
    <Resource Include="src\exit.png" />
    <Resource Include="src\Illustrations\Lunch_break.png" />
    <Resource Include="src\Illustrations\Winners_Monochromatic.png" />
    <Resource Include="src\logo.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MaterialDesignThemes" Version="4.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="logo.ico" />
    <Resource Include="src\logo.ico" />
    <Resource Include="src\logo_glow.jpg" />
    <Resource Include="src\logo_glow_tr.png" />
    <Resource Include="src\logo_h.png" />
    <Resource Include="src\logo_h_small.png" />
    <Resource Include="src\logo_title.png" />
    <Content Include="src\max_window.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Resource Include="src\minimize.png" />
    <Resource Include="src\notification.png" />
    <Resource Include="src\profile.png" />
    <Resource Include="src\search.png" />
    <Content Include="src\small_window.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Page Update="LekarGUI\Dialogues\TerminUpdate.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="LekarGUI\Dialogues\OperacijaCreate.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
    </Page>
    <Page Update="LekarGUI\Pages\LekarNotificationPage.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
    </Page>
  </ItemGroup>

</Project>
